<AddfornecedorPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # caixas de perguntas
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.1
        #fornecedor
            Label:
                text: "Fornecedor:"
                id: fornecedor_label
            TextInput:
                id: fornecedor
                hint_text: "Nome ou Cnpj"


        # botoes
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("compraspage")
            text: "Cancelar"
            pos_hint: {"right": 0.4, "top": 0.2}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.add_fornecedor()
            text: "Adicionar Fornecedor"
            pos_hint: {"right": 1, "top": 0.2}
            size_hint: 0.4, 0.2
