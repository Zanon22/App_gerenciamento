<ProduzirPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # caixas de perguntas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: 1, 0.63
            GridLayout:
                rows : 2
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                id: scroll

        #receita
                Label:
                    text: 'receita'
                    id: receita_label
                Spinner:
                    id: receita
                    text_size: 100, 50
                    valign: 'center'
                    text: 'Selecione...'
                    values:

        #Quantidade
                Label:
                    text: "Quantidade:"
                    id: quantidade_label
                TextInput:
                    id: quantidade
                    hint_text: "Digite apenas números"

        # 2 botões de produção
        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/add.png"
                #on_release: ...
            ImageButton:
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage")