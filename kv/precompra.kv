<PrecompraPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

       # caixas de perguntas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: 1, 0.63
            GridLayout:
                rows : 4
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                id: scroll
            #Data
            #Fornecedor
                Label:
                    text: 'Fornecedor'
                    id: fornecedor_label
                Spinner:
                    id: fornecedor
                    text_size: 100, 50
                    valign: 'center'
                    text: 'Selecione...'
                    values:
            #Preço
                Label:
                    text: "Preço Total(R$):"
                    id: preco_label
                TextInput:
                    id: preco
                    hint_text: "Digite apenas números"
            #Frete
                Label:
                    text: "Frete Total(R$):"
                    id: frete_label
                TextInput:
                    id: frete
                    hint_text: "Digite apenas números"
            #Desconto
                Label:
                    text: "Desconto Total(R$):"
                    id: desconto_label
                TextInput:
                    id: desconto
                    hint_text: "Digite apenas números"
        # botoes
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("compraspage")
            text: "Cancelar"
            pos_hint: {"right": 0.45, "top": 0.2}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.pre_compra()
            text: "Seguir Cadastro"
            pos_hint: {"right": 0.95, "top": 0.2}
            size_hint: 0.4, 0.2