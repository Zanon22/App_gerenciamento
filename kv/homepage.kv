<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # 2 bot√µes da Homepage
        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/recipe-book.png"
                on_release: app.mudar_tela("receitaspage")
            ImageButton:
                source: "icones/cart.png"
                on_release: app.mudar_tela("compraspage")

