<ComprasPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # botoes
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("addfornecedorpage")
            text: "Registrar Fornecedor"
            pos_hint: {"right": 0.85, "top": 0.9}
            size_hint: 0.7, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("addprodutopage")
            text: "Registrar Produto"
            pos_hint: {"right": 0.85, "top": 0.7}
            size_hint: 0.7, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("precomprapage")
            text: "Adicionar Compra"
            pos_hint: {"right": 0.85, "top": 0.5}
            size_hint: 0.7, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("gerenciarestoquepage")
            text: "Ver Estoque"
            pos_hint: {"right": 0.85, "top": 0.3}
            size_hint: 0.7, 0.2

        # bot√£o de voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage")

