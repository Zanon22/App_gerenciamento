<PrereceitaPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

       #pergunta
        #Nome da Receita
        Label:
            text: 'Nome da Receita'
            id: nome_label
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
        TextInput:
            id: receita
            hint_text: "Nome da receita"
            pos_hint: {"right": 0.9, "top": 0.6}
            size_hint: 0.8, 0.1

        # botoes
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("receitaspage")
            text: "Cancelar"
            pos_hint: {"right": 0.45, "top": 0.2}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("addreceitaspage")
            text: "Seguir Cadastro"
            pos_hint: {"right": 0.95, "top": 0.2}
            size_hint: 0.4, 0.2