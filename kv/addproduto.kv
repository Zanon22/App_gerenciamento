<AddprodutoPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # caixas de perguntas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: 1, 0.63
            GridLayout:
                rows : 3
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                id: scroll
            #produto
                Label:
                    text: "Produto"
                    id: produto_label
                TextInput:
                    id: produto
                    hint_text: "Nome do produto"
            #unidade de Medida
                Label:
                    text: "Unidade de Medida"
                    id: undm_label
                Spinner:
                    id: und_medida
                    text_size: 100, 50
                    valign: 'center'
                    text: 'Selecione...'
                    values: 'Unidade', 'g', 'ml', 'metros'

            #quantidade da medida
                Label:
                    text: "Quantidade de Medida"
                    id: qntm_label
                TextInput:
                    id: qnt_medida
                    hint_text: "Apenas numeros"


        # botoes
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("compraspage")
            text: "Cancelar"
            pos_hint: {"right": 0.4, "top": 0.2}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.add_produto()
            text: "Adicionar Produto"
            pos_hint: {"right": 1, "top": 0.2}
            size_hint: 0.4, 0.2